<!-- THAY ĐỔI GIÁ CỦA SẢN PHẨM -->
<%-layout('layout/admin_layout')%>
<style>
  .warning{
    border: 1px solid red;
  }
</style>
<main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
      <div class="breadcrumb-title pe-3">Khách hàng</div>
      <div class="ps-3">
        <nav aria-label="breadcrumb">
          
        </nav>
      </div>
      
    </div>
    <!--end breadcrumb-->

      <div class="card">
        <div class="card-header py-3">
          <h6 class="mb-0">Tìm kiếm sản phẩm</h6>
        </div>
        <div class="card-body">
           <div class="row">
             <div class="col-12 col-lg-5 d-flex">
               <div class="card border shadow-none w-100">
                 <div class="card-body">
                   <form class="row g-3" action="">
                    <div class="col-12">
                        <img src="/public/img/product/<%=pro[0].IDHA%>" alt="" style="height: 150px;width: 150px;">
                    </div>
                     <div class="col-4">
                       <label class="form-label">Mã sản phẩm</label>
                       <input type="text" class="form-control" name="productid" id="productid" disabled value="<%=pro[0].MASP%>">
                     </div>
                     <div class="col-8">
                        <label for="" class="form-label">Tên sản phẩm</label>                        
                        <input type="text" disabled value="<%=pro[0].TENSP%>" class="form-control">
                     </div>
                     <div class="col-4">
                        <label class="form-label">Ngày thay đổi</label>
                        <input type="text" class="form-control" value="<%=pro[0].LOAI%>" disabled>
                    </div>
                     <div class="col-4">
                        <label class="form-label">Ngày thay đổi</label>
                        <input type="text" class="form-control" value="<%=pro[0].CTLOAI%>" disabled>
                    </div>
                     <div class="col-4">
                        <label class="form-label">Ngày thay đổi</label>
                        <input type="text" class="form-control" value="<%=pro[0].DANHMUC%>" disabled> 
                    </div>
                     <div class="col-12">
                        <label class="form-label">Ngày thay đổi</label>
                        <input type="text" class="form-control" name="productdate" id="productdate" 
                        value="<%=(new Date()).toLocaleDateString('en-US',{ weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })%>" disabled>
                      </div>
                      <div class="col-6">
                        <label class="form-label">Giá cũ</label>
                        <input type="text" class="form-control"  value="<%=pro[0].GIA%>">
                      </div>
                      <div class="col-6">
                        <label class="form-label">Giá mới</label>
                        <input type="text" class="form-control" name="productprice" id="productprice" required placeholder="Nhập giá mới">
                      </div>
                      <div class="col-12">
                        <label class="form-label">Ghi chú</label>
                        <textarea name="" id="productnote" class="form-control" rows="3"></textarea>
                      </div>
                     <div class="col-12">
                      <div class="d-grid">
                        <label for="" id="text_warning" style="color: red;" class="mb-3"></label>
                        <button class="btn btn-primary" type="submit" id="btn_change_price">Thay đổi</button>
                      </div>
                     </div>
                   </form>
                 </div>
               </div>
             </div>
             <div class="col-12 col-lg-7 d-flex">
              <div class="card border shadow-none w-100">
                <div class="card-body">
                  <div class="table-responsive">
                     <table class="table align-middle">
                       <thead class="table-light">
                         <tr>
                           <!-- <th><input class="form-check-input" type="checkbox"></th> -->
                           <th>Mã nhân viên</th>
                           <th>Mã sản phẩm</th>
                           <th>Ngày thay đổi</th>
                           <th>Giá mới</th>
                           <th>Ghi chú</th>
                         </tr>
                       </thead>
                       <tbody>
                         <%if(price.length>0){for(let i of price){%>
                            <tr>
                                <td>#<%=i.MANV%></td>
                                <td>#<%=i.MASP%></td>
                                <td><%=i.NGAYTHAYDOI.toLocaleDateString('en-US',{ weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })%></td>
                                <td><%=i.GIAMOI%></td>
                                <td><%=i.GHICHU%></td>
                            </tr>
                         <%}}%>
                       </tbody>
                     </table>
                  </div>
                </div>
              </div>
            </div>
           </div><!--end row-->
        </div>
      </div>
      <div style="width: 100%;height: 100%;background-color: rgba(0, 0, 0, 0.1);z-index: 100;position: fixed; top: 0;left: 0; display: none;" id="view_list_customer">
        <form action="" style="background-color: #fff;width: 1000px;padding: 50px 50px;position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%);
        border-radius: 10px;" id="form_view_list_product">
          <div class="row">
            <!-- <div class="row" >
              <div style="width: 150px;height: 150px;">
                <img src="" alt="product-image" id="view_img" class="img-fluid">
              </div>
            </div> -->
            <div class="row">
              <div class="col-3">
                <label class="form-label" for="">Mã khách hàng</label>
                <input id="view_makh" class="form-control" type="text"  value="" disabled>
              </div>
              <div class="col-9">
                <label class="form-label" for="">Tên khách hàng</label>
                <input id="view_tenkh" class="form-control" type="text"  value="" disabled>
              </div>
            </div>
            <div class="row">
              <div class="col-4">
                <label class="form-label" for="">Số điện thoại</label>
                <input id="view_sdt" class="form-control" type="text"  value="" disabled>
              </div>
              <div class="col-8">
                <label class="form-label" for="">Email</label>
                <input id="view_email" class="form-control" type="text"  value="" disabled>
              </div>
                <div class="row">
                  <div class="col">
                    <label class="form-label" for="">Danh sách địa chỉ</label>
                    <table class="table align-middle">
                      <thead class="table-light">
                        <th>#IDDC</th>
                        <th>Địa chỉ</th>
                        <th>Loại</th>
                        <th>Số điện thoại</th>
                        <th>Tên</th>
                      </thead>
                      <tbody id="tbody_form_show_locate">
                        
                      </tbody>
                    </table>
                  </div>
                </div>
            </div>
            <div class="row">
              <div class="mt-3">
                <button  class="btn btn-warning me-3" id="btn_close_view">Đóng</button>
              </div>
            </div>
          </div>
       </form>
      </div>
  </main>
  <script src="/public/jquery/jquery-3.6.0.min.js"></script>
  <script src="/public/jquery/jquery-ui.js"></script> 
  <script src="/public/js/admin/product_change_price.js"></script>