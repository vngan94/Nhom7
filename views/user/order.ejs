<%-layout('layout/layout')%>
<style>
    body {
        background-color: #f5f5f5;
    }
    .non-favourite {
        background: url("/public/img/New_folder/no-favourite.webp");
        background-repeat: no-repeat;
        background-position: center;
        background-color: #fff;
        transform: translateY(-50%);
        min-height: 500px;
        position: absolute;
        width: 100%;
        top: 50%;
    }
    .product-img {
        max-height: 100px;
        min-width: 100px;
    }
    .border-choice {
        border: 2px solid black;
        padding: 5px 10px;
        border-radius: 5px;
        font-weight: 600;
    }
    .contain-order{
        margin: 15px 0;
    }
    .hhover:hover {
        cursor: pointer;
    }
    .contain-product{
        border-bottom: 1px solid #ccc;
    }
</style>
