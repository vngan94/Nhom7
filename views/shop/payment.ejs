        }

        .quantity-choice {
            border: 1px solid black;
        }

        .size-choice {
            border: 1px solid black;
        }

        .border-choice {
            border: 1px solid black;
            padding: 2px 5px;
            border-radius: 3px;
        }

        .border-choice:hover {
            cursor: pointer;
        }

        .display-class {
            display: block !important;
        }

        .size-detail {
            left: 28px;
            top: 120px;
            list-style: none;
            border-radius: 5px;
            position: absolute;
            border: 1px solid #ccc;
            background-color: #fff;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .quantity-detail {
            top: 120px;
            left: 125px;
            list-style: none;
            position: absolute;
            border-radius: 5px;
            border: 1px solid #ccc;
            background-color: #fff;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .quantity-detail li,
        .size-detail li {
            padding: 0 20px;
        }

        .quantity-detail li:hover,
        .size-detail li:hover {
            color: #fff;
            cursor: pointer;
            background-color: #ccc;
        }

        .locate-label:hover {
            cursor: pointer;
        }

        #change_locate_link:hover {
            cursor: pointer;
        }

        .label-dilivery:hover {
            cursor: pointer;
        }
        .warning{
            color: red;
            border: 1px solid red;
        }
        .disabled-item{
            color: #ccc;
        }
