        body {
            background-color: #f5f5f5;
        }

        .head-item {
            width: 25%;
            color: #888;
            text-align: center;
            display: inline-block;
        }

        .list-items {
            background-color: #fff;
            padding: 15px 20px;
            margin-top: 15px;
        }

        .non-product {
            background: url("/public/img/New_folder/download.png");
            width: 1320px;
            position: absolute;
            background-repeat: no-repeat;
            background-position: center;
            background-color: #fff;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .product-img {
            max-height: 130px;
            max-width: 130px;
        }

        .btn {
            padding: 10px 30px;
            border-radius: 30px;
        }

        .contain-product {
            padding: 15px 0px;
