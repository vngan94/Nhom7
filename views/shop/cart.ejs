<%-layout('layout/layout')%>
    <style>
        body {
            background-color: #f5f5f5;
        }

        .head-item {
            width: 25%;
            color: #888;
            text-align: center;
            display: inline-block;
        }

        .list-items {
            background-color: #fff;
            padding: 15px 20px;
            margin-top: 15px;
        }

        .non-product {
            background: url("/public/img/New_folder/download.png");
            width: 1320px;
            position: absolute;
            background-repeat: no-repeat;
            background-position: center;
            background-color: #fff;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .product-img {
            max-height: 130px;
            max-width: 130px;
        }

        .btn {
            width: 100%;
            padding: 15px 30px;
            border-radius: 30px;
        }

        .contain-product {
            padding: 15px 0px;
            border-bottom: 1px solid #ccc;
        }

        .quantity-choice {
            border: 1px solid black;
        }

        .size-choice {
            border: 1px solid black;
        }

        .border-choice {
            border: 1px solid black;
            padding: 2px 5px;
            border-radius: 3px;
        }

        .border-choice:hover {
            cursor: pointer;
        }

        .display-class {
            display: block !important;
        }

        .size-detail {
            left: 28px;
            top: 120px;
            list-style: none;
            border-radius: 5px;
            position: absolute;
            border: 1px solid #ccc;
            background-color: #fff;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .quantity-detail {
            top: 120px;
            left: 125px;
            list-style: none;
            position: absolute;
            border-radius: 5px;
            border: 1px solid #ccc;
            background-color: #fff;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .quantity-detail li,
        .size-detail li {
            padding: 0 20px;
        }

        .quantity-detail li:hover,
        .size-detail li:hover {
            color: #fff;
            cursor: pointer;
            background-color: #ccc;
        }

        .disabled_element {
            color: #ccc;
            pointer-events: none;
        }
    </style>
